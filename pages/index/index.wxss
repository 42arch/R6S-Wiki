/* pages/index/index.wxss */
page {
  height: 100%;
}
.top {
  display: flex;
  flex-direction: row;
  
  background-color: #0c0c0c;
  color: #fff;
  height: 120rpx;
  border-bottom: 3rpx solid #36a9e0;
}

.top_logo_view {
  background-image: url("http://ing3n.xyz/assets/r6-logo.png");
  width: 348rpx;
  height: 100rpx;
  padding: 10rpx;
  background-size: contain;
  background-repeat: no-repeat;
}
.top_button_view {
  position: absolute;
  right: 1rpx;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}




.operator_view {
  background-color: #0c0c0c;
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-bottom: 30px;
  padding-top: 20rpx;
  color: #fff;
}

.operator_view .atk_view {
  border-right: 1rpx solid #ffffff;
  text-align: center;
  width: 50%;
}

.operator_view .def_view {
  border-left: 1rpx solid #ffffff;
  text-align: center;
  width: 50%;
}

.opt_view_head {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.opt_view_head image {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}


.opt_badge_view {
  background-color: #0c0c0c !important;
  margin-top: 5rpx;
  margin-bottom: 5rpx;
  padding: 12rpx 2rpx !important;
  font-size: small;
  color: #fff;
  font-weight: 500;
  font-family: Arial, Helvetica, sans-serif;
}

.opt_badge_view .opt_badge {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.opt_badge_view .opt_badge_img {
  width:128rpx; 
  height:128rpx
}